    "version": "0.2.0",
    "configurations": [
        {
            "name": "web_app_api Local Debug (Python)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "web_app_api Remote Debug (Python)",
            "type": "python",
            "request": "attach",
            "port": 7001,
            "host": "localhost",
            "logToFile": true,
            "redirectOutput": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
        },
    ]
}